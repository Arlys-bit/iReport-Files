modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.shared]
JWT_SECRET = "ireport-jwt-secret-key-replit-2026"
BACKEND_PORT = "3000"
NODE_ENV = "development"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/iReport_Backend && npx ts-node src/index.ts & cd /home/runner/workspace/iReport/iReport && CI=1 npx expo start --web --port 5000 --host localhost"
waitForPort = 5000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd iReport_Backend && npm start & cd iReport/iReport && npx expo start --web --port 5000 --host localhost"]
